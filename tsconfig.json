{
  "compilerOptions": {
    "lib": ["dom", "es5", "es2015"],
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "removeComments": true,
    "jsx": "preserve",
    "importHelpers": true,
    "pretty":true,
   
    "experimentalDecorators": true,
    "esModuleInterop": true,

    "baseUrl":".",
     "types": [
      "node",
      "webpack-env",
      "bootstrap"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
   },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",  
    "src/*.js",
    "src/*.ts",

  ],
  "exclude": [
    "node_modules"
  ]
}